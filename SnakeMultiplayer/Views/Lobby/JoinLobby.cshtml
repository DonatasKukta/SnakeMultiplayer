
@{
    ViewData["Title"] = "Join Lobby";
    string errorMessage = ViewData["ErrorMessage"] == null ? string.Empty : (string)ViewData["ErrorMessage"];
}

<h2>Join Lobby</h2>

<div class="d-flex justify-content-center container">
    <div class="justify-content-center">
        <h2>Join Lobby</h2>
        @if (!errorMessage.Equals(string.Empty))
        {
            <div>
                <p class="alert alert-danger" role="alert">
                    @errorMessage
                </p>
            </div>
        }
        <div>
            <form asp-controller="Lobby" asp-action="JoinLobby" method="post">
                <label> Your nickname:</label>
                <input type="text" class="form-control" name="playerName">
                <label> Lobby name:</label>
                <input type="text" class="form-control" name="id" value="@ViewData["lobbyId"]">
                <button type="submit" class="btn btn-primary">Join</button>
            </form>
        </div>
    </div>
</div>
