@{
    ViewData["Title"] = "Home Page";
}


@if (ViewData["ErrorMessage"] != null)
{
    <div class="d-flex justify-content-center">
        <div class="p-3 mb-2 bg-danger text-white">
            @ViewData["ErrorMessage"]
            Please create or join another lobby.
        </div>
    </div>
}

<div class="d-flex justify-content-center">
    <form asp-controller="Lobby" asp-action="JoinLobby" method="get">
        <button type="submit" class="btn btn-primary">Join lobby</button>
    </form>
</div>
<div class="d-flex justify-content-center">
    <form asp-controller="Lobby" asp-action="CreateLobby" method="get">
        <button type="submit" class="btn btn-primary">Create lobby</button>
    </form>
</div>